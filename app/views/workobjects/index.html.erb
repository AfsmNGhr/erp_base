<div class="row display">
 <div class="small-3 columns">
  <h4>Список объектов</h4>
 </div>
 <div class="small-3 small-offset-6 columns">
  <%= link_to 'Добавить объект', new_workobject_path, class: "button radius"  %>
 </div>
</div>

<% if flash[:error] %>
    <div id="error_explanation"><h2><%= flash[:error] %></h2></div>
<% end %>

<table>
  <tr>
    <th><%= sortable "id","№№" %></th>
    <th><%= sortable "name","Название" %></th>
    <th><%= sortable "city","Город" %></th>
    <th><%= sortable "address","Адрес" %></th>
    <th><%= sortable "region","Регион" %></th>
    <th><%= sortable "staff_id","Ответственный" %></th>
    <th><%= sortable "status","Статус" %></th>
    <th></th>
    <th></th>
  </tr>

<% @workobjects.each do |workobject| %>
  <tr class="<%= cycle :odd, :even %>">
    <td><%= workobject.id %></td>
    <td><%= link_to workobject.name, workobject %></td>
    <td><%= workobject.city %></td>
    <td><%= workobject.address %></td>
    <td><%= workobject.region %></td>
    <td><%= Staff.find(workobject.staff_id).lname %></td>
    <td><%= workobject_status_hash[workobject.status] %></td>
    <td><%= link_to 'Edit', edit_workobject_path(workobject) %></td>
    <td><%= link_to 'Destroy', workobject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

